<h1>Deleted Course</h1>

<table table class="table table-striped">
  <thead>
    <tr>
      <th>Course ID></th>
      <th>Course title</th>
      <th>Topic</th>
      <th>Day length</th>
      <th>Price</th>
      <th>Level</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.course_id %></td>
        <td><%= course.course_title %></td>
        <td><%= course.topic %></td>
        <td><%= course.day_length %></td>
        <td><%= course.price %></td>
        <td><%= course.level_id %></td>
        <td><%= course.category %></td>
        <td><%= link_to "Restore", course_restore_course_path(course), method: :patch, class: 'btn btn-info'%>
       
      </tr>
    <% end %>
  </tbody>
</table>

<br>
