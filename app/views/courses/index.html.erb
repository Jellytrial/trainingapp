<p id="notice"><%= notice %></p>

<h1>Course List</h1>

<%= will_paginate class: "apple_pagination"%>

<table table class="table table-striped">
  <thead>
    <tr>
      <th>Course ID<%= sort_asc("course_id") %><%= sort_desc("course_id") %></th>
      <th>Course title<%= sort_asc("course_title") %><%= sort_desc("course_title") %></th>
      <th>Topic<%= sort_asc("topic") %><%= sort_desc("topic") %></th>
      <th>Day length<%= sort_asc("day_length") %><%= sort_desc("day_length") %></th>
      <th>Price<%= sort_asc("price") %><%= sort_desc("price") %></th>
      <th>Level<%= sort_asc("level_id") %><%= sort_desc("level_id") %></th>
      <th>Category<%= sort_asc("category") %><%= sort_desc("category") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.course_id, course_path(course, course.course_id) %></td>
        <td><%= course.course_title %></td>
        <td><%= course.topic %></td>
        <td><%= course.day_length %></td>
        <td><%= course.price %></td>
        <td><%= course.level_id %></td>
        <td><%= course.category %></td>
       
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate class: "apple_pagination"%>
<h1></h1>
<%= link_to 'Back', root_path, class: "back_btn"%> 
<%= link_to 'New Course', new_course_path, class: "edit_btn" %>
