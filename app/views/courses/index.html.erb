<p id="notice"><%= notice %></p>

<h1>Course List</h1>

<%= will_paginate class: "apple_pagination"%>

<table table class="table table-striped">
  <thead>
    <tr>
      <th>Course ID</th>
      <th>Course title</th>
      <th>Topic</th>
      <th>Day length</th>
      <th>Price</th>
      <th>Level</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.course_id, course_path(course, course.course_id) %></td>
        <td><%= course.course_title %></td>
        <td><%= course.topic %></td>
        <td><%= course.day_length %></td>
        <td><%= course.price %></td>
        <td><%= course.level_id %></td>
        <td><%= course.category %></td>
       
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate class: "apple_pagination"%>
<h1></h1>
<%= link_to 'Back', root_path, class: "back_btn"%> 
<%= link_to 'New Course', new_course_path, class: "edit_btn" %>
