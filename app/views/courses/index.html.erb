<p id="notice"><%= notice %></p>

<h1>Course List</h1>

<table table class="table table-striped">
  <thead>
    <tr>
      <th>Course_ID</th>
      <th>Course title</th>
      <th>Topic</th>
      <th>Day length</th>
      <th>Price</th>
      <th>Level</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.course_id, course_path(course, course.course_id) %></td>
        <td><%= course.course_title %></td>
        <td><%= course.topic %></td>
        <td><%= course.day_length %></td>
        <td><%= course.price %></td>
        <td><%= course.level_id %></td>
        <td><%= course.category %></td>
       
      </tr>
    <% end %>
  </tbody>
</table>

<br>

