<h1>Update Course</h1>

<div class="row">
 <div class="col-md-6 col-md-offset-3">
  <%= form_for(@course) do |f| %>
  <%= f.label :course_id %>
  <%= f.text_field :course_id %>

  <%= f.label :course_title %>
  <%= f.text_field :course_title %>

  <%= f.label :topic %>
  <%= f.text_field :topic %>

  <%= f.label :day_length %>
  <%= f.number_field :day_length %>

  <%= f.label :price %>
  <%= f.number_field :price %>

  <%= f.label :level_id %>
  <%= f.number_field :level_id %>

  <%= f.label :category %>
  <%= f.text_field :category %>   

  <%= f.submit "Update Course", class: "btn btn-primary" %>
  <% end %>
 </div>
</div>

<%= link_to 'Show', @course %> |
<%= link_to 'Back', courses_path %>
