<h1>Create A New Course</h1>

<% if @course.errors.any? %>
 <div id="error_explanation">
 <div class="alert alert-danger">
 The form contains <%= pluralize(@course.errors.count, "error") %>.
 </div>
 <ul>
  <% @course.errors.full_messages.each do |msg| %>
 <li><%= msg %></li>
  <% end %>
 </ul>
 </div>
<% end %>

<div class="row">
 <div class="col-md-6 col-md-offset-3">
  <%= form_for(@course) do |f| %>
  <%= f.label :course_id, "Courese ID" %>
  <%= f.text_field :course_id %>

  <%= f.label :course_title %>
  <%= f.text_field :course_title %>

  <%= f.label :topic %>
  <%= f.text_field :topic %>

  <%= f.label :day_length %>
  <%= f.number_field :day_length %>

  <%= f.label :price %>
  <%= f.number_field :price %>

  <%= f.label :level_id %>
  <%= f.number_field :level_id %>

  <%= f.label :category %>
  <%= f.text_field :category %>   

  <%= f.submit "Create New Course", class: "btn btn-primary" %>
  <% end %>
 </div>
</div>

<%= link_to 'Back', courses_path, class: "back_btn" %>
